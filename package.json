    "test": "npx hardhat test",
    "format": "prettier --write **/*.ts{,x}",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "serve-frontend": "cd frontend && npm run start"
  },
  "keywords": [
    "evmconnector"
  ],
